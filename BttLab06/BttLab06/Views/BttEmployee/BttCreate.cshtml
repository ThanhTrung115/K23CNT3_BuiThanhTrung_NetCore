@model BttLab06.Models.BttEmployee

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm mới nhân viên</h2> @* Tiêu đề form *@

    <form asp-action="BttCreateSubmit" method="post">
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">Họ tên</span>
                <input asp-for="BttName" class="form-control" placeholder="Nhập họ tên" />
            </div>
            <span asp-validation-for="BttName" class="text-danger"></span> @* Hiển thị lỗi validation *@
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">Ngày sinh</span>
                <input asp-for="BttBirthDay" type="date" class="form-control" />
            </div>
            <span asp-validation-for="BttBirthDay" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">Email</span> @* Ký tự @ trong HTML không có vấn đề gì *@
                <input asp-for="BttEmail" class="form-control" placeholder="Email nhân viên" />
            </div>
            <span asp-validation-for="BttEmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">Số điện thoại</span> @* Ký tự ☎ trong HTML không có vấn đề gì *@
                <input asp-for="BttPhone" class="form-control" placeholder="Số điện thoại" />
            </div>
            <span asp-validation-for="BttPhone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text">Lương cơ bản</span> @* Ký tự ₫ trong HTML không có vấn đề gì *@
                <input asp-for="BttSalary" class="form-control" placeholder="Lương cơ bản" type="number" step="0.01" /> @* Thêm type="number" và step="0.01" *@
            </div>
            <span asp-validation-for="BttSalary" class="text-danger"></span>
        </div>

        <div class="mb-4">
            @* Điều chỉnh margin-bottom theo hình ảnh *@
            <label for="BttStatus" class="form-label">Trạng thái</label> @* Giữ nguyên label cho select, phù hợp hơn *@
            <select asp-for="BttStatus" id="BttStatus" class="form-select">
                <option value="true">Đang làm</option>
                <option value="false">Nghỉ việc</option>
            </select>
            <span asp-validation-for="BttStatus" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Lưu lại</button>
        <a asp-action="BttIndex" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}